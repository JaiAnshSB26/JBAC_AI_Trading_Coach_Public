# JBAC AI Trading Coach - Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================
# Application Settings
# ============================================
APP_ENV=development
APP_NAME=JBAC AI Trading Coach
APP_VERSION=1.0.0
DEBUG=true

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api

# CORS Settings (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8501

# ============================================
# Model Settings (Ollama for local dev)
# ============================================
# Use "ollama" for local development, "bedrock" for production
MODEL_PROVIDER=ollama

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=gemma3:1b

# AWS Bedrock Configuration (for production)
AWS_REGION=us-east-1
BEDROCK_MODEL_ID=anthropic.claude-3-5-sonnet-20240620-v1:0

# ============================================
# Data & Storage
# ============================================
# Local storage directory for user data
DATA_DIR=.data

# AWS S3 (for production)
S3_BUCKET_NAME=jbac-ai-trading-coach
S3_PREFIX=data/

# DynamoDB (for production)
DYNAMODB_TABLE_USERS=jbac-users
DYNAMODB_TABLE_PLANS=jbac-plans
DYNAMODB_TABLE_SIMULATIONS=jbac-simulations

# ============================================
# Market Data
# ============================================
# Market data provider: "yfinance" (free) or "polygon" (paid)
MARKET_DATA_PROVIDER=yfinance

# Polygon.io API key (if using polygon)
POLYGON_API_KEY=

# Alpha Vantage API key (alternative)
ALPHA_VANTAGE_KEY=

# ============================================
# Authentication & Security
# ============================================
# JWT Secret (generate with: openssl rand -hex 32)
JWT_SECRET=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Google OAuth2 Configuration
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/callback

# ============================================
# Logging & Monitoring
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# CloudWatch (for production)
CLOUDWATCH_LOG_GROUP=/aws/jbac-trading-coach
CLOUDWATCH_LOG_STREAM=backend

# ============================================
# Rate Limiting & Quotas
# ============================================
RATE_LIMIT_PER_USER_PER_MINUTE=60
MAX_TOKENS_PER_USER_PER_DAY=100000

# ============================================
# Feature Flags
# ============================================
ENABLE_WEBSOCKETS=true
ENABLE_ADMIN_ENDPOINTS=false
ENABLE_METRICS=true